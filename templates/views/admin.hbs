        <h1 class="dash-title">Admin</h1>
        <div class="row">
            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Coal Power</h6>
                        <h2 class="text-right, coal"><span>Running! - 685 Wh</span></h2>
                        <h4 class="text-right"><span>Click to manage</span></h4>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Production Ratio</h6>
                        <h2 class="text-left bm"><span>2:1 Buffer / Market</span></h2>
                        <h4 class="text-right"><span>Click to manage</span></h4>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Market Demand</h6>
                        <h2 class="text-right cardfix"><span>??? ???</span></h2>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Electricity Price</h6>
                        <h2 class="text-left bm"><span>3 kr / watt</span></h2>
                        <h4 class="text-right"><span>Click to manage</span></h4>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Modeled Electricity Price</h6>
                        <h2 class="text-left bm"><span>2 kr / watt</span></h2>
                        <h4 class="text-right"><span>Click to see details</span></h4>
                    </div>
                </div>
            </div>

            <div class="col-md-4 col-xl-3">
                <div class="card aeolus-green-bg order-card">
                    <div class="card-block">
                        <h6 class="m-b-20">Prosumers</h6>
                        <h2 class="text-left bm"><span>458 Online</span></h2>
                        <h4 class="text-right"><span>Click to manage</span></h4>
                    </div>
                </div>
            </div>
            
        </div>
